use WC_Order_Item_Fee;
use WC_Coupon;

if ( ! defined( 'ABSPATH' ) ) exit;

/** Last inn oversettelser */
add_action( 'init', function(){
	load_plugin_textdomain( 'lilleprinsen', false, dirname( plugin_basename( __FILE__ ) ) . '/languages' );
} );

/* ==========================================================
